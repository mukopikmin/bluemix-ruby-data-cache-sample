<div class="row">

  <div class="col-lg-6">
    <h2>Search cached data</h2>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Key</span>
        <input id="key" type="text" name="key" value="" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <input type="submit" onClick="search()" value="Search" class="btn btn-primary">
    </div>
  </div>

  <div class="col-lg-6">
    <h3>Result</h3>
    <p>
      <%= @result %>
    </p>
    <% unless @value == nil %>
      <h3>Key</h3>
      <p>
        <%= @value[:key] %>
      </p>
      <h3>Value</h3>
      <p>
        <%= @value[:value] %>
      </p>
      <h3>Contnet-type</h3>
      <p>
        <%= @value[:type] %>
      </p>
    <% end %>
  </div>

</div>

<script charset="utf-8">
    function search() {
      var key = $("#key").val();
      if(key == null || key == "") {
        alert("Empty key is not allowed");
        return false;
      } else {
        location.href = '/search/' + key;
        return true;
      }
    }
</script>
