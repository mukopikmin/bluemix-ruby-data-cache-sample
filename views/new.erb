<div class="row">

  <div class="col-lg-6">
    <h2>Insert data</h2>
    <form id="insert" action="/new" method="post">
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Key</span>
          <input type="text" name="key" value="" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Value</span>
          <input type="text" name="value" value="" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Content-type</span>
          <select id="type" name="type" class="form-control">
            <% @types.each do |type| %>
              <option value="<%= type[:id] %>"><%= type[:name] %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <input type="submit" name="submit" value="Insert" class="btn btn-primary">
      </div>
    </form>
  </div>

  <div class="col-lg-6">
    <h3>Result</h3>
    <p>
      <%= @result %>
    </p>
  </div>

</div>
